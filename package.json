{
	"name": "@dacodedbeat/with-defer-js",
	"version": "0.0.3",
	"description": "A simple and lightweight JavaScript library for scheduling deferred function callbacks to execute after a function, like Golang.",
	"type": "module",
	"main": "src/with-defer.js",
	"exports": {
		".": {
			"import": "./src/with-defer.js",
			"types": "./src/with-defer.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dacodedbeat/with-defer-js.git"
	},
	"files": [
		"src/with-defer.js",
		"src/with-defer.d.ts",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"test": "vitest",
		"test:run": "vitest --run",
		"test:coverage": "vitest --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"typecheck": "tsc --noEmit",
		"prepack": "npm run lint && npm run typecheck && npm run test:run"
	},
	"keywords": [
		"defer",
		"cleanup",
		"javascript",
		"async",
		"promise",
		"golang",
		"error-handling",
		"timeout",
		"cancellation"
	],
	"author": "Arun Philip <dacodedbeat@gmail.com>",
	"license": "MPL-2.0",
	"engines": {
		"node": ">=16.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	}
}
